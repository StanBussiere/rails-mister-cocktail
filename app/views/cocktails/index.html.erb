<head>
  <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">
</head>
<body>
<h1>Stan's Bar</h1>
  <h2>Cocktails list</h2>
      <div class="flip-cards">
        <% @cocktails.each do |cocktail| %>
        <div class="flip-card">
          <div class="flip-card-inner">
            <div class="flip-card-front" style="background-image: url('<%= cl_image_path cocktail.photo, height: 240, width: 320, crop: :fill%>')">
              <h3> <%= cocktail.name %></h3>

            </div>
            <div class="flip-card-back">
              <h3><%= cocktail.name %></h3>
              <%= link_to 'See cocktail', cocktail %>
              <br>
              <%= link_to 'Delete cocktail', cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' }%>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <br>
  <span><%= link_to 'Add a cocktail', new_cocktail_path, class: 'btn-add'%></span>
</body>
